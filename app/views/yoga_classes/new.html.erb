<%= form_for :yoga_class, url: yoga_classes_path do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.date_select :date %><br>
  </p>

  <p>
    <%= f.label :size %><br>
    <%= f.number_field :size %><br>
  </p> 

  <p>
    <%= f.label :teacher %><br>
    <%= f.text_field :teacher %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<% if @yoga_class && @yoga_class.errors %>
  <% @yoga_class.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<% if @errors %>
	<%= render 'errors/errors', locals: {errors: @errors} %>
<% end %>

<%= form_for :user, url: '/login' do |f| %>
	<table>
	  <tr>
	    <td><%= f.label :email %></td>
	    <td><%= f.text_field :email %></td>
	  </tr>
	  <tr>
	    <td><%= f.label :password %></td>
	    <td><%= f.password_field :password %></td>
	  </tr>

	  <tr>
	    <td colspan="2"><%= f.submit %></td>
	  </tr>
	</table>
<% end %>